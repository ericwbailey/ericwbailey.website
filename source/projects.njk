{% set projectList = projects.items %}
  <ul class="[ l-list-grid l-list-grid--projects ] [ c-link-list ]">
  {% for item in projectList %}
    {% if item.schema %}

    <li
      class="c-link-list__item"
      itemprop="workExample"
      itemscope
      itemtype="http://schema.org/{{ item.schema }}">
      <a
        class="c-link-list__link"
        itemprop="url"
        href="{{ item.url }}">
          <span itemprop="name">{{ item.title | safe }}</span>
      </a>
      {% if item.additional %}
        <span class="c-link-list__additional">
          {{ item.additional | safe }}
        </span>
      {% endif %}
      <span class="c-link-list__description">
        <small style="display: block">{{ item.description | safe }}</small>
      </span>
    </li>

    {% else %}

    <li class="c-link-list__item">
      <a
        class="c-link-list__link"
        href="{{ item.url }}">
        {{ item.title | safe }}
      </a>
      {% if item.additional %}
        <span class="c-link-list__additional">
          {{ item.additional | safe }}
        </span>
      {% endif %}
      <span class="c-link-list__description">
        <small style="display: block">{{ item.description | safe }}</small>
      </span>
    </li>

    {% endif %}
  {% endfor %}
  </ul>
